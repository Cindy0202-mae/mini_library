<h1 class="text-center my-4">Book Details</h1>
<div class="container">
  <%= render 'book', book: @book, google_book: @google_book %>
</div>

<div class="d-flex flex-wrap justify-content-center align-items-center my-4">
  <%= link_to "Edit this book", edit_book_path(@book), class: 'btn btn-primary btn-sm me-2 mb-2' %>
  <%= link_to "Back to books", books_path, class: 'btn btn-secondary btn-sm me-2 mb-2' %>
  <%= button_to "Destroy this book", @book, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: 'btn btn-danger btn-sm mb-2' %>
</div>
