<h1 class="text-center my-4">Book Details</h1>
<div class="container">
  <%= render 'book', book: @book, google_book: @google_book %>
</div>

<div class="d-flex justify-content-between align-items-center my-4">
  <div>
    <%= link_to "Edit this book", edit_book_path(@book), class: 'btn btn-primary btn-sm me-2' %>
    <%= link_to "Back to books", books_path, class: 'btn btn-secondary btn-sm' %>
  </div>

  <%= button_to "Destroy this book", @book, method: :delete, class: 'btn btn-danger btn-sm' %>
</div>
